#include <stdio.h>

int main(){
    int n,i,j,ttat,twt,bt[10],tat[10],wt[10],p[10],pos;
    int temp;
    float awt,atat;
    printf("Enter the no. of processes: ",n);
    scanf("%d",&n);

    for(i=0;i<n;i++){
        printf("Enter the burst time of P[%d]",i+1);
        scanf("%d",&bt[i]);
        p[i] = i+1;
    }

    for(i=0;i<n;i++){
        pos = i;
        for(j=i+1;j<n;j++){
            if(bt[j]<bt[pos])
                pos = j;}
        temp = bt[i];
        bt[i] = bt[pos];
        bt[pos] = temp;

        temp = p[i];                
           p[i]= p[pos];
        p[pos] = temp;
            
            
        }

    wt[0]= 0;
    twt = wt[0];
    ttat = tat[0];

    for(i=0;i<n;i++){
        wt[i]= 0;
        for(j=0;j<i;j++){
            wt[i] += bt[j];
        }
    }

    for(i=0;i<n;i++){
        tat[i]= wt[i]+bt[i];
        twt += wt[i];
        ttat += tat[i];

    }
    printf("\n Process\t Burst time\t Waiting time\t TurnAroundTime\n");
    for(i=0;i<n;i++){
        printf("\n P[%d]\t\t %d\t\t %d\t\t %d",p[i],bt[i],wt[i],tat[i]);

    }
    awt = (float)twt/n;
    atat = (float)ttat/n;

    printf("\n%f",awt);
    printf("\n%f",atat);

    return 0;
}
